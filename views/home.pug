extends ./layout

block content
    div(class="box")
        h1 ;-P <br>
            i 점심 뭐 먹지?
        h1(class="answer") [#{storeResult.name}]
        a(href=storeResult.map, target="_blank")
            img(src="/static/svg/location.svg" width="32" height="32" alt="약도보기")
        a(href="tel:" + storeResult.tel, target="_blank")
            img(src="/static/svg/phone.svg" width="32" height="32" alt="전화번호")
        a(href="/" target="_self")
            img(src="/static/svg/refresh.svg" width="32" height="32" alt="새로고침")
        p(class="store_tags")
            each store in storeAll
                span #{store.name} / 
    div.copyright Made for workplace
    div.bg_black
    div(class="bg_img blur" style="background:url("+ storeResult.img +") center center no-repeat fixed #000000;background-size:cover")
